<?xml version="1.0"?>
<config>
    <modules>
        <Ecube_JcubeConnect>
            <version>1.0.3</version>
        </Ecube_JcubeConnect>
    </modules>

    <global>
        <models>
            <jcubeconnect>
                <class>Ecube_JcubeConnect_Model</class>
            </jcubeconnect>
        </models>
        <blocks>
            <jcubeconnect>
                <class>Ecube_JcubeConnect_Block</class>
            </jcubeconnect>
        </blocks>
        <helpers>
            <jcubeconnect>
                <class>Ecube_JcubeConnect_Helper</class>
            </jcubeconnect>
        </helpers>
    </global>

    <frontend>
        <events>
            <!-- event used to retreive cart from jcube -->
            <controller_action_predispatch>
                <observers>
                    <jcubeconnect>
                        <class>Ecube_JcubeConnect_Model_Observer_Sync</class>
                        <method>retrieveBasketFromJcube</method>
                    </jcubeconnect>
                </observers>
            </controller_action_predispatch>

            <!-- event used to send cart to jcube -->
            <controller_front_send_response_before>
                <observers>
                    <jcubeconnect>
                        <class>Ecube_JcubeConnect_Model_Observer_Sync</class>
                        <method>sendBasketToJcube</method>
                    </jcubeconnect>
                </observers>
            </controller_front_send_response_before>
        </events>

        <!-- Router needed for checking the status of the server -->
        <routers>
            <jcubeconnect>
                <use>standard</use>
                <args>
                    <module>Ecube_JcubeConnect</module>
                    <frontName>jcubeconnect</frontName>
                </args>
            </jcubeconnect>
        </routers>
    </frontend>

    <admin>
        <routers>
            <jcubeconnect>
                <use>admin</use>
                <args>
                    <module>Ecube_JcubeConnect</module>
                    <frontName>jcubeconnect</frontName>
                </args>
            </jcubeconnect>
        </routers>
    </admin>

    <adminhtml>
        <menu>
            <jcubeconnect translate="title">
                <title>jCube</title>
                <sort_order>51</sort_order>
                <children>
                    <jcubeconnectgo translate="title">
                        <title>jCube</title>
                        <action>jcubeconnect/adminhtml_jcubeconnect</action>
                    </jcubeconnectgo>
                    <jcubeconnectconfig translate="title">
                        <title>Configuration</title>
                        <action>adminhtml/system_config/edit/section/jcubeconnect</action> 
                    </jcubeconnectconfig>
                </children>
            </jcubeconnect>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <jcubeconnect translate="title" module="jcubeconnect">
                                            <title>jCubeConnect</title>
                                        </jcubeconnect>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <jcubeconnect translate="title" module="jcubeconnect">
                            <title>jCubeConnect</title>
                            <children>
                                <jcubeconnectgo translate="title" module="jcubeconnect">
                                    <title>jCube</title>
                                </jcubeconnectgo>
                                <jcubeconnectconfig translate="title" module="jcubeconnect">
                                    <title>Configuration</title>
                                </jcubeconnectconfig>
                            </children>
                        </jcubeconnect>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <jcubeconnect>
                    <file>jcubeconnect.xml</file>
                </jcubeconnect>
            </updates>
        </layout>
    </adminhtml>

    <default>
        <jcubeconnect>
            <frame>
                <url>http://www.e-cube.nl/</url>
                <width>100%</width>
                <height>450px</height>
            </frame>
            <customer>
                <id>0</id>
                <key></key>
            </customer>
            <cartsync>
                <enabled>0</enabled>
                <retreive>1</retreive>
                <no_retreive_on_routes>/^(\/jcubeconnect\/).*$/</no_retreive_on_routes>
                <send>1</send>
                <no_send_on_routes>/^(\/jcubeconnect\/).*$/</no_send_on_routes>
                <api_url_getbasket>http://JCUBEDOMAIN/mgnapi/requestBasket</api_url_getbasket>
                <api_url_setbasket>http://JCUBEDOMAIN/mgnapi/updateBasket</api_url_setbasket>
            </cartsync>
            <advanced>
                <debug>0</debug>
                <log_force>0</log_force>
                <log_transport>0</log_transport>
            </advanced>
        </jcubeconnect>
    </default>
</config>
